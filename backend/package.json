{
  "name": "smart-invoice-backend",
  "version": "1.0.0",
  "description": "Smart Invoice Backend API",
  "main": "dist/index.js",
  "engines": {
    "node": "20.18.0",
    "npm": "10.8.2"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx watch src/index.ts",
    "start:production": "node dist/index.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop smart-invoice-backend",
    "restart:pm2": "pm2 restart smart-invoice-backend",
    "delete:pm2": "pm2 delete smart-invoice-backend",
    "logs:pm2": "pm2 logs smart-invoice-backend",
    "monit:pm2": "pm2 monit",
    "start:machine": "podman machine start",
    "start:db": "podman compose -f docker-compose.yml up -d",
    "reset:db": "podman compose -f docker-compose.yml down -v && podman compose -f docker-compose.yml up -d",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -- --dataSource src/database/data-source.ts --pretty src/database/migrations/schema",
    "migration:run": "npm run typeorm migration:run -- --dataSource src/database/data-source.ts",
    "migration:revert": "npm run typeorm migration:revert -- --dataSource src/database/data-source.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.5.3"
  }
}
